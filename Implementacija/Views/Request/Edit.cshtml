@model ooadproject.Models.Request

@{
    ViewData["Title"] = "Obrada";
    Layout = "~/Views/Shared/_LayoutStudentService.cshtml";
}

<h1>Obrada zahtjeva</h1>

<h4>@ViewBag.Student.FirstName @ViewBag.Student.LastName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group pb-2" style="display: none;">
                <label asp-for="RequesterID" class="control-label pb-1"></label>
                <input asp-for="RequesterID" class="form-control" />
                <span asp-validation-for="RequesterID" class="text-danger"></span>
            </div>
            <div class="form-group pb-2" style="display: none;">
                <label asp-for="RequestTime" class="control-label pb-1">Vrijeme</label>
                <input asp-for="RequestTime" class="form-control" />
                <span asp-validation-for="RequestTime" class="text-danger"></span>
            </div>
            <div class="form-group mb-2" style="display: none;">
                <label asp-for="Type" class="control-label">Promijenite status zahtjeva</label>
                <select asp-for="Type" class="form-control" asp-items="ViewBag.RequestTypes"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Status" class="control-label">Promijenite status zahtjeva</label>
                <select asp-for="Status" class="form-control" asp-items="ViewBag.RequestStatus"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group pb-2" style="display: none;">
                <label asp-for="ProcessorID" class="control-label pb-1"></label>
                <input asp-for="ProcessorID" class="form-control" />
                <span asp-validation-for="ProcessorID" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <input type="submit" value="Sačuvaj izmjene" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vrati se</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
