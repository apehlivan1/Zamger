@model ooadproject.Models.Course

@{
    ViewData["Title"] = "Izbriši predmet";
    Layout = "~/Views/Shared/_LayoutStudentService.cshtml";
}

<h1>Delete</h1>

<h3>Da li ste sigurni da želite izbrisati ovo?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Naziv predemta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Nastavnik
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Teacher.Id)
        </dd>
        <dt class = "col-sm-2">
            Akademska godina
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AcademicYear)
        </dd>
        <dt class = "col-sm-2">
            ECTS
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ECTS)
        </dd>
        <dt class = "col-sm-2">
            Semestar
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Semester)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Izbriši" class="btn btn-danger" /> |
        <a asp-action="Index">Vrati se</a>
    </form>
</div>
